<beans:beans xmlns="http://www.springframework.org/schema/security"
             xmlns:beans="http://www.springframework.org/schema/beans"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://www.springframework.org/schema/beans
                http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
                http://www.springframework.org/schema/security
                http://www.springframework.org/schema/security/spring-security-5.3.xsd">

    <global-method-security secured-annotations="enabled" pre-post-annotations="enabled" proxy-target-class = "true" />
    <http auto-config='true'>
        <csrf disabled="true"/>

        <intercept-url pattern="/auth/login*" access="isAnonymous()"/>
        <intercept-url pattern="/auth/perform_login*" access="isAnonymous()"/>
        <intercept-url pattern="/**" access="isAuthenticated()" />


        <!--        <access-denied-handler error-page="/accessDenied"/>-->

        <form-login
                login-page="/auth/login"
                login-processing-url="/auth/perform_login"
                default-target-url="/index"
                authentication-failure-url="/auth/login?error"
                username-parameter="username"
                password-parameter="password"/>
        <logout
                logout-url="/auth/perform_logout"
                logout-success-url="/auth/login"/>
    </http>

    <authentication-manager erase-credentials="false">
        <!--        <authentication-provider>-->
        <!--            <user-service>-->
        <!--                <user name="admin" password="admin" authorities="ROLE_ADMIN" />-->
        <!--                <user name="user" password="user" authorities="ROLE_USER"/>-->
        <!--            </user-service>-->
        <!--        </authentication-provider>-->
    </authentication-manager>

</beans:beans>