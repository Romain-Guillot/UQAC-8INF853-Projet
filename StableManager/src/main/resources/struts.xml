<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.5//EN"
        "http://struts.apache.org/dtds/struts-2.5.dtd">
<struts>
    <constant name="struts.devMode" value="true" />
    <constant name="struts.enable.SlashesInActionNames" value="true"/>
    <constant name="struts.mapper.alwaysSelectFullNamespace" value="false"/>
    <constant name="struts.patternMatcher" value="regex" />




    <package name="default" namespace="/" extends="struts-default">

        <global-results>
            <result name="success" type="redirectAction">index</result>
            <result name="error">/error404.jsp</result>
            <result name="error_notfound">/error404.jsp</result>
            <result name="error_database">/error404.jsp</result>
            <result name="error_permission_missing">/error404.jsp</result>
        </global-results>

        <action name="index" class="com.uqac.stablemanager.homepage.HomePageAction">
            <result>/index.jsp</result>
        </action>
    </package>

    <include file="struts-auth.xml"/>
    <include file="struts-member.xml"/>
    <include file="struts-security.xml"/>

</struts>
